#!/usr/bin/env perl6

use v6;
use File::Find;

my @files = find :dir<./t>;

for @files -> $file {
    next if $file ~~ :d;
    next if $file.path ~~ /\.[dat||cer||der||crt]$/;

    say $file.path;
    my @lines = $file.lines;
    @lines = @lines.map(sub ($foo) { return $foo ~ "\n" });
    @lines.splice(1, 0, "use lib 'lib';\n");
    $file.spurt: @lines;
}
